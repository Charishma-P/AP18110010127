<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:background="#EAE8E4"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="#EAE8E4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="TEAM A"
                android:textStyle="bold"
                android:background="#82F43A"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="center"
                android:text="0"
                android:textSize="100sp"
                android:id="@+id/Acount"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="99dp"
                android:layout_gravity="center"
                android:background="#68D7E3"
                android:text="+1 POINT"
                android:textSize="20sp"
                android:id="@+id/A1"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="99dp"
                android:layout_gravity="center"
                android:background="#68D7E3"
                android:layout_marginTop="10dp"
                android:text="+2 POINT"
                android:textSize="20sp"
                android:id="@+id/A2"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#68D7E3"
                android:layout_marginTop="10dp"
                android:text="+3 POINT"
                android:textSize="20sp"
                android:id="@+id/A3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="TEAM B"
                android:background="#F87541"
                android:textStyle="bold"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="center"
                android:text="0"
                android:textSize="100sp"
                android:id="@+id/Bcount"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="99dp"
                android:layout_gravity="center"
                android:background="#68D7E3"
                android:text="+1 POINT"
                android:textSize="20sp"
                android:id="@+id/B1"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="99dp"
                android:layout_gravity="center"
                android:background="#68D7E3"
                android:layout_marginTop="10dp"
                android:text="+2 POINT"
                android:textSize="20sp"
                android:id="@+id/B2"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#68D7E3"
                android:layout_marginTop="10dp"
                android:text="+3 POINT"
                android:textSize="20sp"
                android:id="@+id/B3"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="94dp"
        android:layout_gravity="center"
        android:background="#8F8C8C"
        android:layout_marginTop="20dp"
        android:textColor="#F3F3F3"
        android:text="RESET"
        android:textSize="40sp"
        android:id="@+id/reset"/>
</LinearLayout>